<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:text="Student Profile"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

        <TextView
            android:text="Personal Info"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"/>

        <TextView android:text="Name: John Doe" android:textColor="#AAAAAA"/>
        <TextView android:text="Email: student@college.edu" android:textColor="#AAAAAA"/>

        <TextView
            android:text="Academic Identity"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"/>

        <TextView android:text="Roll No: CS2023-45" android:textColor="#AAAAAA"/>
        <TextView android:text="Department: Computer Science" android:textColor="#AAAAAA"/>
    </LinearLayout>
</ScrollView>
