<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:text="Dashboard"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

        <!-- CARD -->
        <LinearLayout
            android:layout_marginTop="16dp"
            android:background="#1A1A1A"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:text="Overall Academic Status"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>

            <TextView
                android:text="Good Standing"
                android:textColor="#AAAAAA"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:background="#1A1A1A"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:text="Attendance Risk"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>

            <TextView
                android:text="2 Subjects Below 75%"
                android:textColor="#FF7777"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:background="#1A1A1A"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:text="Upcoming Deadlines"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>

            <TextView
                android:text="Assignment due tomorrow"
                android:textColor="#FFAA00"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
